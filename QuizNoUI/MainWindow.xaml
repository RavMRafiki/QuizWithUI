<Window x:Class="QuizNoUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizNoUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ProgressBar Margin="10" Width="450" Value="50"/>
                <Button Margin="10">Start</Button>
                <Button Margin="10">Stop</Button>
                <Button Margin="10">Next</Button>
            </StackPanel>
        </Grid>
        <ListBox Grid.Row="2">
            <ListBoxItem>XD</ListBoxItem>
            <ListBoxItem>XD2</ListBoxItem>
        </ListBox>
        <Grid Grid.Column="2" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.ColumnSpan="2">XD Or XDDDDDDD??</Label>
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <CheckBox/>
                <TextBlock>XD1</TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
                <CheckBox></CheckBox>
                <TextBlock>XD2</TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <CheckBox/>
                <TextBlock>XD3</TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Vertical">
                <CheckBox/>
                <TextBlock>XD4</TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
